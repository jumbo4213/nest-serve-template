{
  "name": "nest-serve-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "g:user-module": "nest g -c ./schematics user-module -p user",
    "g:user-manage": "nest g -c ./schematics manage-module -p manage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/jj-serve/test/jest-e2e.json",
    "typeorm": "node -r tsconfig-paths/register -r ts-node/register -r ./register-env.js ./node_modules/typeorm/cli.js",
    "migration:create": "node -r tsconfig-paths/register -r ts-node/register -r ./register-env.js ./node_modules/typeorm/cli.js migration:create -c default -n ",
    "migration:generate": "node -r tsconfig-paths/register -r ts-node/register -r ./register-env.js ./node_modules/typeorm/cli.js migration:generate -c default -n ",
    "migration:run": "node -r tsconfig-paths/register -r ts-node/register -r ./register-env.js ./node_modules/typeorm/cli.js migration:run -c default",
    "migration:revert": "node -r tsconfig-paths/register -r ts-node/register -r ./register-env.js ./node_modules/typeorm/cli.js migration:revert -c default",
    "codegen:user": "node api/codegen.js -p api/user-api.json -o ../jj-client/api/src/user-api.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/typeorm": "^7.1.0",
    "bcrypt": "^5.0.1",
    "cache-manager": "^3.4.4",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "jose": "^1.27.2",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.34",
    "wechat-next": "^0.4.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.4.2",
    "mustache": "^4.2.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "swagger-typescript-api": "^1.11.0",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/shared/(.*)": "<rootDir>/libs/shared/src/$1",
      "@app/shared": "<rootDir>/libs/shared/src",
      "@app/core/(.*)": "<rootDir>/libs/core/src/$1",
      "@app/core": "<rootDir>/libs/core/src"
    }
  }
}